<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trips" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/classic_blue2</item>
        <item name="colorPrimaryVariant">@color/classic_blue3</item>
        <item name="colorOnPrimary">@color/classic_blue7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sepia1</item>
        <item name="colorSecondaryVariant">@color/sepia4</item>
        <item name="colorOnSecondary">@color/sepia6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/concert__one</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.Trips">
        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="CustomFontText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/concert__one</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomBoldText" parent="CustomFontText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="CustomButton" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:fontFamily">@font/concert_one</item>
        <item name="android:textSize">15sp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">?attr/colorSecondary</item>

    </style>

    <style name="CustomTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/concert__one</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.Trips.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trips.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Trips.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>